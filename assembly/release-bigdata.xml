<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>treasure-api</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <files>
        <file>
            <source>bin/${environment}/startup.sh</source>
            <outputDirectory>bin/</outputDirectory>
            <destName>startup.sh</destName>
        </file>
        <file>
            <source>bin/${environment}/startup.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <destName>startup.bat</destName>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>com.aiden:treasure-api</include>
            </includes>
            <binaries>
                <outputDirectory>lib/</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>lib/</outputDirectory>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
